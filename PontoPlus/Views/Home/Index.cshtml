@model PontoPlus.Models.Usuario

@{
    ViewData["Title"] = "Ponto Eletrônico";
}

@section scripts{
    <script language="JavaScript">
        function myTime() {
            var d = new Date(), displayDate;
            if (navigator.userAgent.toLowerCase().indexOf('firefox') > -1) {
                displayDate = d.toLocaleTimeString('pt-BR');
            }
            else {
                displayDate = d.toLocaleTimeString('pt-BR', { timeZone: 'America/Sao_Paulo' });
            }
            document.getElementById("clock").innerHTML = displayDate;
        }

        $().ready(function () {
            myTime();
            var myVar = setInterval(myTime, 1000);
        });
    </script>
}

@section Css{
    <style>
        .ponto-card {
            width: 450px;
            margin: 150px auto;
            color: #7a7a7a;
            border-radius: 2px;
            margin-bottom: 15px;
            font-size: 13px;
            background: #ececec;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 15px 30px;
            position: relative;
        }

        .usuario-info {
            margin-top: 20px;
        }

        .usuario-info ul li {
            margin-right: 20px;
        }

        .usuario-info ul li:last-child {
            margin-right: 0 im !important;
        }

        .btn-ponto {
            margin-top: 30px;
        }
    </style>
}

<div class="container">
    <div class="text-center">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="ponto-card">
        <div class="clock">
            <h1 id="clock" class="text-center">-- : -- : --</h1>
        </div>
        <div class="usuario-info">
            <ul class="list-inline text-center">
                <li>@Html.DisplayFor(model => model.EntradaAm) - @Html.DisplayFor(model => model.SaidaAm)</li>
                <li>@Html.DisplayFor(model => model.EntradaPm) - @Html.DisplayFor(model => model.SaidaPm)</li>
            </ul>
        </div>
        <div class="btn-ponto">
            <form asp-action="Index" asp-controller="Home" method="POST">
                <input type="submit" name="Ponto" class="btn btn-sucess btn-block" value="Entrar">
            </form>
        </div>
    </div>
</div>
