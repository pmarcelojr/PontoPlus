@model PontoPlus.PontoPlus.Domain.Entities.Usuario

@{
    ViewData["Title"] = "Senha Enviada - Ponto Plus";
}

@section Css{
<style type="text/css">
    body {}

    .form-control {
        min-height: 41px;
        background: #fff;
        box-shadow: none im !important;
        border-color: #E3E3E3;
    }

    .form-control:focus {
        border-color: #70C5C0;
    }

    .form-control,
    .btn {
        border-radius: 10px;
    }

    .login-form {
        width: 350px;
        margin: 0 auto;
        padding: 100px 0 30px;
    }

    .login-form form {
        color: #7A7A7A;
        border-radius: 2px;
        margin-bottom: 15px;
        font-size: 13px;
        background: #ECECEC;
        box-shadow: 0px 2px 2px rgb(0, 0, 0, 0.3);
        padding: 30px;
        position: relative;
    }

    .login-form h2 {
        font-size: 22px;
        margin: 35px 0 25px;
    }

    .login-form .avatar {
        position: absolute;
        margin: 0 auto;
        left: 0;
        right: 0;
        top: -50px;
        width: 95px;
        height: 95px;
        border-radius: 50%;
        z-index: 9;
        @*background:#70C5C0;*@@*background:#2fa4e7;*@background: #2C3E50;
        padding: 15px;
        box-shadow: 0px 2px 2px rgb(0, 0, 0, 0.1);
    }

    .login-form .logo {
        margin: 0 auto;
        padding-bottom: 0;
        padding-top: 15px;
        width: 130px;
        height: 100px;
    }

    .login-form img {
        width: 100%;
    }

    .login-form input[type="checkbox"] {
        margin-top: 2px;
    }

    .login-form .btn {
        font-size: 16px;
        font-weight: bold;
        @*background:#70C5C0;*@@*background:#2fa4e7;*@background: #2C3E50;
        border: none;
        margin-bottom: 20px;
    }

    .login-form .btn:hover,
    .login-form .btn:focus {
        @*background:#50B8B3;*@background: #157ab5;
        outline: none !important;
    }

    .login-form .name {
        font-size: 16px;
        font-weight: bold;
        @*background:#70C5C0;*@@*background:#2fa4e7;*@background: #2C3E50;
        border: none;
        margin-bottom: 20px;
    }

    .login-form .name:hover,
    .login-form .name:focus {
        @*background:#50B8B3;*@background: #157ab5;
        outline: none !important;
    }

    .login-form a {
        text-decoration: underline;
    }

    .login-form a:hover {
        text-decoration: none;
    }

    .login-form form a {
        @*color:#7A7A7A;*@@*color:#2fa4e7;*@color: #2C3E50;
        text-decoration: none;
    }

    .login-form form a:hover {
        text-decoration: underline;
    }
</style>
}

<div class="login-form">
    <p>
        Um e-mail com instruções para redefinição de senha foi enviado para <strong>@(Context.Request.Query["email"])</strong>.<br>
        <br>
        Por favor, verifique sua caixa de entrada.
    </p>
    <p>
        <a href="/">Voltar para a Página Inicial</a>
    </p>
</div>